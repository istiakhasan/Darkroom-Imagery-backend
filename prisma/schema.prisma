generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id              String            @id @default(uuid())
  name            String
  email           String            @unique
  password        String
  role            RoleEnum
  contactNo       String            @unique
  address         String
  profileImg      String
  reviewAndRating ReviewAndRating[]
  createdAt       DateTime          @default(now())
  updatedAt       DateTime          @updatedAt
  Services        Services[]
  BookedService   BookedService[]
  Faqs            Faqs[]
  Blog            Blog[]

  @@map("user")
}

model Services {
  id              String            @id @default(uuid())
  serviceName     String
  service_desc    String
  service_img     String
  userId          String
  user            User              @relation(fields: [userId], references: [id])
  ReviewAndRating ReviewAndRating[]
  createdAt       DateTime          @default(now())
  updatedAt       DateTime          @updatedAt
  BookedService   BookedService[]

  @@map("services")
}

model ReviewAndRating {
  id        String   @id @default(uuid())
  review    String
  rating    Int
  userId    String
  serviceId String
  user      User     @relation(fields: [userId], references: [id])
  service   Services @relation(fields: [serviceId], references: [id])
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("review_and_rating")
}

model BookedService {
  id        String     @id @default(uuid())
  userId    String
  serviceId String
  remarks   String
  toDate    DateTime
  formDate  DateTime
  status    StatusEnum
  user      User       @relation(fields: [userId], references: [id])
  service   Services   @relation(fields: [serviceId], references: [id])
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt

  @@map("booked_services")
}

// FAQ model schema 
model Faqs {
  id       String @id @default(uuid())
  question String
  answer   String
  userId   String
  user     User   @relation(fields: [userId], references: [id])

  @@map("faqs")
}

// blog model shcema
model Blog {
  id          String   @id @default(uuid())
  title       String
  description String
  image       String
  authroId    String
  user        User     @relation(fields: [authroId], references: [id])
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("blog")
}

enum RoleEnum {
  admin
  user
  super_admin
}

enum StatusEnum {
  pending
  cofirm
  reject
}
